{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "noStrictGenericChecks": true,
    "suppressExcessPropertyErrors": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "lib": [ "es2017", "dom" ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
  ]
}
